generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  words     Word[]
}

enum WordStatus {
  NEW
  LEARNING
  MASTERED
}

enum PartOfSpeech {
  NOUN
  VERB
  ADJECTIVE
  ADVERB
  PRONOUN
  PREPOSITION
  CONJUNCTION
  INTERJECTION
  ARTICLE
}

model Word {
  id            Int          @id @default(autoincrement())
  word          String
  translation   String
  transcription String?
  partOfSpeech  PartOfSpeech?
  forms         String?
  example       String?
  synonyms      String?
  tags          String?
  notes         String?
  status        WordStatus   @default(NEW)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userId        Int
  user          User         @relation(fields: [userId], references: [id])
}


